{
  "name": "frontend",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/frontend/src",
  "projectType": "application",
  "targets": {
    "ng": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "packages/frontend",
        "command": "ng"
      }
    },
    "start": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "packages/frontend",
        "command": "ng run app:serve-ssr --host 0.0.0.0 --port 8100"
      }
    },
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "packages/frontend",
        "commands": [
          "ng build --configuration=production",
          "webpack -c sw-webpack.config.js",
          "workbox injectManifest",
          "tsx upload-sourcemaps.ts"
        ],
        "parallel": false
      }
    },
    "build:selfhost": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "packages/frontend",
        "commands": [
          "webpack -c sw-webpack.config.js",
          "ng build --configuration=selfhost",
          "workbox injectManifest"
        ],
        "parallel": false
      }
    },
    "typecheck": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "packages/frontend",
        "command": "tsc --noEmit"
      }
    },
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "packages/frontend",
        "commands": [
          "ng lint",
          "npx --yes @julianpoy/ngx-translate-lint --config ./ngx-translate-lint.config.json"
        ]
      }
    }
  }
}
