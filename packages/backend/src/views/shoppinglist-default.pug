html
  head
    title= title
    script(type="text/javascript").
      var _paq = window._paq || [];
      /* tracker methods like "setCustomDimension" should be called before "trackPageView" */
      _paq.push(['trackPageView']);
      _paq.push(['enableLinkTracking']);
      (function() {
        var u="//a.recipesage.com/";
        _paq.push(['setTrackerUrl', u+'matomo.php']);
        _paq.push(['setSiteId', '3']);
        var d=document, g=d.createElement('script'), s=d.getElementsByTagName('script')[0];
        g.type='text/javascript'; g.async=true; g.defer=true; g.src=u+'matomo.js'; s.parentNode.insertBefore(g,s);
      })();
    link(href="https://fonts.googleapis.com/css?family=Noto+Serif|Noto+Sans", rel="stylesheet")
    style(type='text/css').
      body {
        position: relative;
        margin: 0.635cm;
        font-family: 'Noto+Sans', sans-serif;
        font-size: 14px;
      }

      .items {
        column-count: 2;
      }

      .items > .set:first-child > .setTitle {
        margin-top: 0;
      }

      .setTitle {
        margin: 5px 0px 0px 0px;
      }

      .categoryTitle {
        margin-bottom: 5px;
      }

      .items > div, .items p {
        margin: 0px 0px 5px 0px;
      }

      .subSet {
        margin-left: 15px;
      }

      .hint {
        font-size: 11px;
      }

      .doNotBreak {
        -webkit-column-break-inside: avoid;
        page-break-inside: avoid;
        break-inside: avoid;
        position: relative;
      }

  h2= title

  if !modifiers.groupSimilar && !modifiers.groupCategories
    div(class="items")
      each item in items
        p= item.title

  if !modifiers.groupSimilar && modifiers.groupCategories
    div(class="items")
      each categoryTitle in categoryTitles
        div(class="set doNotBreak")
          div(class="setTitle categoryTitle")
            b= categoryTitle
          div(class="subSet")
            each item in itemsByCategoryTitle[categoryTitle]
              p= item.title

  if modifiers.groupSimilar && !modifiers.groupCategories
    div(class="items")
      each groupTitle in groupTitles
        div(class="set doNotBreak")
          if itemsByGroupTitle[groupTitle].length > 1
            div(class="setTitle")= groupTitle
            div(class="subSet hint")
              each item in itemsByGroupTitle[groupTitle]
                i= item.title
                br
          else
            div(class="setTitle")= groupTitle

  if modifiers.groupSimilar && modifiers.groupCategories
    div(class="items")
      each categoryTitle in categoryTitles
        div(class="set doNotBreak")
          div(class="setTitle categoryTitle")
            b= categoryTitle
          each group in groupsByCategoryTitle[categoryTitle]
            div(class="subSet doNotBreak")
              if group.items.length > 1
                div(class="setTitle")= group.title
                div(class="subSet hint")
                  each item in group.items
                    i= item.title
                    br
              else
                div(class="setTitle")= group.items[0].title

  p(class="printed-on")
    i Printed on&nbsp;
    i= date

  script(type='text/javascript').
    if (window.location.href.indexOf('print=true') > -1) {
      window.print();
      window.onafterprint = window.close;
    }

    window.addEventListener('message', function(e) {
      if (e.data == 'print') window.print();
    });
